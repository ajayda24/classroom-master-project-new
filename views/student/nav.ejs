<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/tutor/nav.css">
    <style>
        #chatBox{
          font-size: 3rem;
          color: #aa7ee2;
          position: fixed;
          bottom: 20px;
          right: 30px;
          z-index: 1000;
        }
    </style>
</head>
<div class="wrapper">
 <!-- Sidebar  -->
 <style>
     /* #sidebar{
         height: 600px;
     } */
 </style>
 <nav id="sidebar" class="active">
     <div class="sidebar-header">
        <a   href="/student"> Hi <br> <%= name %> </a>
     </div>

     <ul class="list-unstyled components">
        <li class="<%= sPath === '/student/task' ? 'active' : '' %>">
            <a   href="/student/task"> Today's Task </a>
        </li>
        <li class="<%= sPath === '/student/attendance' ? 'active' : '' %>">
            <a  href="/student/attendance"> Attendance </a>
        </li>
        <li class="<%= sPath === '/student/assignments' ? 'active' : '' %>">
            <a  href="/student/assignments"> Assignments </a>
        </li>
        <li class="<%= sPath === '/student/announcements' ? 'active' : '' %>">
            <a  href="/student/announcements"> Announcements </a>
        </li>
        <li class="<%= sPath === '/student/notes' ? 'active' : '' %>">
            <a  href="/student/notes"> Notes </a>
        </li>
        <li class="<%= sPath === '/student/profile' ? 'active' : '' %>">
            <a  href="/student/profile"> Profile </a>
        </li>
     </ul>

    
 </nav>


<script type="text/javascript">
 $(document).ready(function () {
     $('#sidebarCollapse').on('click', function () {
         $('#sidebar').toggleClass('active');
     });
     const sWidth = window.innerWidth;
     if(sWidth <= 768){
     $('#tutorContent').on('click', function () {
         $('#sidebar').removeClass('active');
     });
    }
 });
</script>


