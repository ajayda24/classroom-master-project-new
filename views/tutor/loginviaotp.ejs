<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/tutor/login.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    
        <section class="w3l-login">
		<div class="overlay">
			<div class="wrapper">
				<div class="logo">
					<h2 class="text-white"> Hi Tutor</h2>
				</div>
				<% if(getOtp) { %>
					<!-- After Getting OTP -->
				<div class="form-section">
					<h3>Login</h3>
					<h6>To continue</h6>
					<form action="/tutor/login/otp/verify" method="post" class="signin-form">
						<div class="form-input">
							<input type="number" name="otp" placeholder="Enter OTP" required="" autocomplete="off">
						</div>
						<button type="submit" class="btn btn-primary theme-button mt-4">Verify</button>
					</form>
				</div>
				<% } else { %>
					<!-- Before Getting OTP -->
					<div class="form-section">
					<h3>Login</h3>
					<h6>To continue</h6>
					<form action="/tutor/login/otp/send" method="post" class="signin-form">
						<div class="form-input">
							<input type="number" name="phone" placeholder="Mobile No." required="" autocomplete="off">
						</div>
						<button type="submit" class="btn btn-primary theme-button mt-4">Get OTP</button>
					</form>
				</div>
				<% } %>
			</div>
		</div>
		<div id='stars'></div>
		<div id='stars2'></div>
		<div id='stars3'></div>
	</section>
    
<%- include('../includes/end.ejs') %>